<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/selectAvatar"
        android:layout_width="445dp"
        android:layout_height="67dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/josefin_sans_bold"
        android:lineSpacingExtra="8sp"
        android:text="Select New Avatar"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#A6A5A5"
        android:textSize="16sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="502dp"
        android:layout_height="776dp"
        android:gravity="clip_horizontal|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectAvatar"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:id="@+id/1stRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/canada"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/CanadaFlag" />

            <ImageView
                android:id="@+id/japan"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/JapanFlag" />

            <ImageView
                android:id="@+id/argentina"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/argentinaflags" />
        </TableRow>

        <TableRow
            android:id="@+id/2ndRow"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/russia"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/RussiaFlag" />

            <ImageView
                android:id="@+id/union"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/EuropeUnionFlag" />

            <ImageView
                android:id="@+id/india"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/IndiaFlag" />

        </TableRow>

        <TableRow
            android:id="@+id/thirdRow"
            android:layout_width="100dp"
            android:layout_height="111dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lebanon"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/LebanonFlag" />

            <ImageView
                android:id="@+id/uk"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/UnitedKingdomFlag" />

            <ImageView
                android:id="@+id/kenya"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/KenyaFlag" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </TableLayout>

</android.support.constraint.ConstraintLayout>